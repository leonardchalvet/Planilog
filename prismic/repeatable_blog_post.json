{
  "A-General": {
    "page_title": {
      "type": "Text",
      "config": {
        "useAsTitle": true,
        "label": "Page name (displayed only on Prismic)"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "Slug (unique, utilisé dans l'url) ex : 'planifier'"
      }
    },
    "seo_page_title": {
      "type": "Text",
      "config": {
        "label": "SEO - Name"
      }
    },
    "seo_page_description": {
      "type": "Text",
      "config": {
        "label": "SEO - Description"
      }
    },
    "seo_og_title": {
      "type": "Text",
      "config": {
        "label": "SEO Open Graph - Name"
      }
    },
    "seo_og_description": {
      "type": "Text",
      "config": {
        "label": "SEO Open Graph - Description"
      }
    },
    "seo_og_image": {
      "type": "Image",
      "config": {
        "label": "SEO Open Graph - Image"
      }
    }
  },
  "Cover": {
    "post_title": {
      "type": "Text",
      "config": {
        "label": "Titre"
      }
    },
    "post_excerpt": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph",
        "label": "Résumé"
      }
    },
    "post_image": {
      "type": "Image",
      "config": {
        "label": "Image"
      }
    },
    "post_published_by": {
      "type": "Text",
      "config": {
        "label": "\"publié par\""
      }
    },
    "post_author": {
      "type": "Text",
      "config": {
        "label": "Auteur"
      }
    },
    "post_author_image": {
      "type": "Image",
      "config": {
        "label": "Portrait auteur"
      }
    },
    "post_published_at": {
      "type": "Text",
      "config": {
        "label": "\"le\""
      }
    },
    "post_date": {
      "type": "Date",
      "config": {
        "label": "Date"
      }
    }
  },
  "Post": {
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "choices": {
          "texte": {
            "type": "Slice",
            "fieldset": "Texte",
            "description": "Titres, texte, images, listes",
            "icon": "format_align_left",
            "display": "list",
            "non-repeat": {
              "texte": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Texte"
                }
              }
            },
            "repeat": {}
          },
          "youtube": {
            "type": "Slice",
            "fieldset": "Youtube",
            "description": "Vidéo youtube",
            "icon": "slideshow",
            "display": "list",
            "non-repeat": {
              "youtube_video_id": {
                "type": "Text",
                "config": {
                  "label": "Video ID"
                }
              }
            },
            "repeat": {}
          },
          "citation": {
            "type": "Slice",
            "fieldset": "Citation",
            "description": "citation",
            "icon": "sms",
            "display": "list",
            "non-repeat": {
              "author": {
                "type": "Text",
                "config": {
                  "label": "Auteur"
                }
              },
              "quote": {
                "type": "Text",
                "config": {
                  "label": "Citation"
                }
              }
            },
            "repeat": {}
          },
          "bouton": {
            "type": "Slice",
            "fieldset": "Bouton",
            "description": "Bouton",
            "icon": "touch_app",
            "display": "list",
            "non-repeat": {
              "button": {
                "type": "Text",
                "config": {
                  "label": "Bouton"
                }
              },
              "link": {
                "type": "Link",
                "config": {
                  "allowTargetBlank": true,
                  "label": "Lien"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Articles associés": {
    "related_title": {
      "type": "Text",
      "config": {
        "label": "Titre"
      }
    },
    "related_posts": {
      "type": "Group",
      "config": {
        "fields": {
          "post": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": [
                "blog_post"
              ],
              "label": "Article"
            }
          }
        },
        "label": "Posts associés"
      }
    }
  }
}
